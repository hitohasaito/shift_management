<%= form_with(model: [@shift, @comment] ) do |f| %>
  <% if @comment.errors.any? %>
    <div class = "alert alert-warning" >
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "comment_field">
    <p><%= f.label:content %></p>
    <p><%= f.text_area:content %></p>
  </div>
  <%= f.submit %>
<% end %>
