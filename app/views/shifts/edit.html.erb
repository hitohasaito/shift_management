<h1>シフト編集</h1>
<%= form_with(model:@shift, local:true) do |f| %>
  <% if @shift.errors.any? %>
    <div class = "alert alert-warning">
      <ul>
        <% @shift.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.admin? %>
    <div class = "shift_info">
      <%= f.label:duty_on %>
      <%= f.date_field:duty_on %>
    </div>

    <div class = "shift_info">
      <%= f.label:started_at %>
      <%= f.time_select :started_at %>
    </div>

    <div class = "shift_info">
      <%= f.label:end_at %>
      <%= f.time_select :end_at %>
    </div>

    <div class = "shift_info">
      <%= f.label:job %>
      <%= f.text_field:job %>
    </div>

    <div class = "shift_info">
      <%= f.label:assigned_user %>
      <%= f.text_field:assigned_user %>
    </div>
    
  <% elsif @shift.assigned_user.empty? %>
    <div class = "shift_info">
      <%= f.label:assigned_user %>
      <%= f.text_field:assigned_user %>
    </div>
  <% else %>
    <p>権限がありません</p>
  <% end %>
  <%= f.submit %>
<% end %>
